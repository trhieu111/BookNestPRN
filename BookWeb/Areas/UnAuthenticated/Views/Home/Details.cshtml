@model BookWeb.Models.ShoppingCart    
<form method="post">
    <input hidden asp-for="ProductId" />
    <div class="container backgroundWhite">
        <div class="card">
                <div class="card-body">
                    <h3 class="card-title">@Model.Product.Title</h3>
                    <h6 class="card-subtitle">by @Model.Product.Author</h6>
                    <div class="row">
                        <div class="col-lg-5 col-md-5 col-sm-6">
                            <div class="white-box text-center"><img src="@Model.Product.ImageUrl" class="img-responsive" width="100%"></div>
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-6">
                            <h4 class="box-title mt-5">Book description</h4>
                            <p>@Html.Raw(Model.Product.Description)</p>
                            <h2 class="mt-5">
                                @Model.Product.Price.ToString("c")<small class="text-success">(36%off)</small>
                            </h2>
                            <div class="row pl-2 mb-4">
                              <div class="col-2 text-primary"><h4>Count</h4></div>
                              <div class="col-10"><input class="form-control" asp-for="Count" min="1"  value="1"/></div>
                            </div>
                            <button type="submit" class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title="" data-original-title="Add to cart">
                                <i class="fa fa-shopping-cart"></i>
                            </button>
                            <button asp-action="Index" class="btn btn-primary btn-rounded">Back to list</button>
                            <h3 class="box-title mt-5">Catergory</h3>
                            <ul class="list-unstyled">
                                <li><i class="fa fa-check text-success"></i>@Model.Product.Category.Name</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</form>