@model IEnumerable<BookWeb.Models.Product>

<div class="row pb-3 backgroundWhite">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row-p-2">
                <div class="col-12 p-1" style="border-radius:5px;">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="@product.ImageUrl"alt="Card img cap">
                        <div class="card-body">
                            <h5 class="card-title">@product.Title</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text">@product.Author</p>
                            <div style="padding-left:5px;">
                                <p style="color: green">As low as: <b class="">$ @product.Price</b></p>
                            </div>
                            <a asp-action="Details" class="btn-success btn form-control" asp-route-id="@product.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>